
<% if (@weather[0]["high"]).nil?||(@weather2[0]["high"]).nil? %>
<%= "Not a valid location! Try again." %>

<% elsif @weather[0]["high"] > @weather2[0]["high"] %>
<%= params[:location].titleize %>
<%= @weather[@day]["day_of_week"] %>
<%= @weather[@day]["high"] %>
<%= @weather[@day]["condition"] %>
<% else %>
<%= params[:location2].titleize  %>
<%= @weather2[@day]["day_of_week"] %>
<%= @weather2[@day]["high"] %>
<%= @weather2[@day]["condition"] %>
<% end %>
